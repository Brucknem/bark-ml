test --test_output=errors --action_env="GTEST_COLOR=1"

# Force bazel output to use colors (good for jenkins) and print useful errors.
common --color=yes

build  --cxxopt='-std=c++14' --copt=-O3 --repository_cache=~/.cache/bazel-repo --disk_cache=~/.cache/bazel-disk
fetch --repository_cache=~/.cache/bazel-repo
query --repository_cache=~/.cache/bazel-repo

